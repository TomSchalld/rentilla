@model IEnumerable<Rentilla.Models.OfferToDem>

@{
    ViewBag.Title = "Index";
}

<h2>
    Demand n°@ViewBag.DemandId
    @if (User.IsInRole("administrator"))
    {
        @Html.ActionLink("Edit", "Edit", "Demands", new { id = ViewBag.OfferId }, null)
        @Html.ActionLink(" Delete", "Delete", "Demands", new { id = ViewBag.OfferId }, null)
    }
</h2>

<div>
<hr />
<dl class="dl-horizontal">
    <dt>
        State
    </dt>

    <dd>
        @ViewBag.Demand.Accepted
    </dd>

    <dt>
        Date Start
    </dt>

    <dd>
        @ViewBag.Demand.DateStart
    </dd>

    <dt>
        Date End
    </dt>

    <dd>
        @ViewBag.Demand.DateEnd
    </dd>

    <dt>
       Username
    </dt>

    <dd>
        @ViewBag.Username
    </dd>

    <dt>
        Title
    </dt>

    <dd>
        @ViewBag.Demand.Titel
    </dd>

    <dt>
        Description
    </dt>

    <dd>
        @ViewBag.Demand.Description
    </dd>

    <dt>
        Allowance
    </dt>

    <dd>
        @ViewBag.Demand.Allowance
    </dd>

    <dt>
       Allowance Description
    </dt>

    <dd>
       @ViewBag.Demand.AllowanceDescription
    </dd>

</dl>

</div>

<hr />
<div class="row">
    <div class="col-md-3">
        <h3>
            <a href="">Offers to this demand</a>
            @Html.ActionLink(" ", "Create", "OfferToDems", new { id = ViewBag.DemandId }, new { @class = "fa fa-plus-square-o fa-3", @title = "Create offer" })
        </h3>
    </div>
</div>
<table class="table table-bordered">
    <tr>
        <th>
            Username
        </th>
        <th>
            Title
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Allowance)
        </th>
        <th>
            Description of the allowance
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Allowance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllowanceDescription)
        </td>
        <td>
            @if (User.IsInRole("administrator"))
                {
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                @Html.ActionLink(" Delete", "Delete", new { id = item.ID })
            }
        </td>
    </tr>
}

</table>
