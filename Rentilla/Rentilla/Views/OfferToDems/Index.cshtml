@model IEnumerable<Rentilla.Models.OfferToDem>

@{
    ViewBag.Title = "Index";
}

<h2>Demand</h2>

<div>
<hr />
<dl class="dl-horizontal">
    <dt>
        Accepted
    </dt>

    <dd>
        @ViewBag.Demand.Accepted
    </dd>

    <dt>
        Date Start
    </dt>

    <dd>
        @ViewBag.Demand.DateStart
    </dd>

    <dt>
        Date End
    </dt>

    <dd>
        @ViewBag.Demand.DateEnd
    </dd>

    <dt>
       Username
    </dt>

    <dd>
        @ViewBag.Username
    </dd>

    <dt>
        Titel
    </dt>

    <dd>
        @ViewBag.Demand.Titel
    </dd>

    <dt>
        Description
    </dt>

    <dd>
        @ViewBag.Demand.Description
    </dd>

    <dt>
        Allowance
    </dt>

    <dd>
        @ViewBag.Demand.Allowance
    </dd>

    <dt>
       Allowance Description
    </dt>

    <dd>
       @ViewBag.Demand.AllowanceDescription
    </dd>

</dl>

</div>
<hr />
<h4>Offers to this demand</h4>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.DemandId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Allowance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllowanceDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Allowance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllowanceDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
