@{
    ViewBag.Title = "Home Page";
}

<h1>Newest Offers</h1>
<br />
<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Allowance
        </th>
        <th>
            Allowance Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.LastThreeOffersList)
    {
        <tr>
            <td>
                @item.UID
            </td>
            <td>
                @item.Titel
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Allowance
            </td>
            <td>
                @item.AllowanceDescription
            </td>
            <td>
                @Html.ActionLink("Detail", "../DemandToOffs/Index", new { id = item.ID })
                @if (User.IsInRole("administrator"))
                {
                    @Html.ActionLink(" | Edit", "../Offers/Edit", new { id = item.ID })
                    @Html.ActionLink(" | Delete", "../Offers/Delete", new { id = item.ID })
                }
            </td>
        </tr>
    }

</table>
<hr />
<h1>Newest Demands</h1>
<br/>
<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            Title
        </th>
        <th>
            Answered?
        </th>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>
        
        <th>
