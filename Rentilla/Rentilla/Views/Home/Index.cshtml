        </th>
        <th>
            Allowance
        </th>
        <th>
            Allowance Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.LastThreeDemandsList)
    {
        <tr>
            <td>
                @item.UID
            </td>
            <td>
                @item.Titel
            </td>
            <td>
                @item.Accepted
            </td>
            <td>
                @item.DateStart
            </td>
            <td>
                @item.DateEnd
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Allowance
            </td>
            <td>
                @item.AllowanceDescription
            </td>
            <td>
                @Html.ActionLink("Detail", "../OfferToDems/Index", new { id = item.ID })
                @if (User.IsInRole("administrator"))
                {
                    @Html.ActionLink(" | Edit", "../Demands/Edit", new { id = item.ID })
